generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model AdminUser {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  passwordSalt String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sessions     Session[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  user      AdminUser @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model HomeContent {
  id                  String   @id @default(cuid())
  featuredTitle       String   @default("Featured Tools")
  featuredSubtitle    String   @default("Explore productivity tools designed for operations and content workflows")
  whyChooseTitle      String   @default("Why Choose This Toolbox")
  whyChooseSubtitle   String   @default("Unified frontend-backend architecture with secure deployment")
  feature1Title       String   @default("Fast")
  feature1Description String   @default("Optimized Next.js runtime with edge-ready APIs")
  feature2Title       String   @default("Secure")
  feature2Description String   @default("Session-based admin with hashed passwords")
  feature3Title       String   @default("Scalable")
  feature3Description String   @default("Prisma Postgres with global acceleration")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model ToolModule {
  id        String   @id @default(cuid())
  key       String   @unique
  title     String
  desc      String
  status    String   @default("启用")
  views     Int      @default(0)
  color     String   @default("blue")
  order     Int      @default(0)
  category  String   @default("other")
  updatedAt DateTime @updatedAt
}

model ToolCategory {
  id        String   @id @default(cuid())
  key       String   @unique
  label     String
  order     Int      @default(0)
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  status    String   @default("draft")
  order     Int      @default(0)
  views     Int      @default(0)
  coverUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Suggest {
  id        String   @id @default(cuid())
  nickname  String
  content   String
  createdAt DateTime @default(now())
}

model DailyVisit {
  id        String   @id @default(cuid())
  date      String   
  module    String   
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, module])
}

model IpVisit {
  id        String   @id @default(cuid())
  ip        String
  date      String
  module    String
  createdAt DateTime @default(now())

  @@unique([ip, date, module])
  @@index([date, module])
}
